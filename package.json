{
  "name": "pvz3-resource-downloader",
  "version": "1.1.0",
  "description": "PvZ3中国版资源下载器 - Plants vs. Zombies 3 Chinese Resource Downloader",
  "main": "src/main.js",
  "homepage": "https://github.com/ji233-Sun/PvZ3Downloader",
  "author": {
    "name": "ji233-Sun",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:test": "electron-builder --dir",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "pvz3",
    "plants-vs-zombies-3",
    "resource-downloader",
    "game-assets",
    "electron",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ji233-Sun/PvZ3Downloader.git"
  },
  "bugs": {
    "url": "https://github.com/ji233-Sun/PvZ3Downloader/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "fs-extra": "^11.2.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0"
  },
  "build": {
    "appId": "com.ji233.pvz3-resource-downloader",
    "productName": "PvZ3资源下载器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "gui/**/*",
      "locales/**/*",
      "package.json",
      "!src/**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "ji233-Sun",
      "repo": "PvZ3Downloader"
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
